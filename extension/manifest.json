{
  "manifest_version": 3,
  "name": "Contxtly",
  "version": "1.0.0",
  "description": "Contextual translator for any webpage",
  "permissions": ["storage"],
  "host_permissions": ["http://localhost:8000/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
